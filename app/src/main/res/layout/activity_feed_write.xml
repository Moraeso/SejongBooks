<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_feedClose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="피드 작성"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/btn_feed_close"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:src="@drawable/ic_close" />

        <Button
            android:id="@+id/btn_feed_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/box_round_gray"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="14dp"
            android:text="게시" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/custom_gradient_layout">

        </LinearLayout>
    </RelativeLayout>

    <EditText
        android:id="@+id/editText_feed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@drawable/edittext_border"
        android:gravity="left"
        android:hint="피드 내용을 작성해주세요 (최대 200자)"
        android:maxLength="200"
        android:padding="20dp"
        android:textColorHint="@color/colorGray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_feed_length"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center|right"
        android:text="0 / 200"
        android:maxLength="200"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/btn_feed_imageButton"
            style="@android:style/Widget.ImageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/box_round_gray"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/img_add_write"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_add_write" />

    </RelativeLayout>

</LinearLayout>
