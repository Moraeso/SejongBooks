<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_bookPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="1dp"
    app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bookImage"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/book_sample" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <RatingBar
                    android:id="@+id/rb_book_grade_map"
                    style="@style/starRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/txt_book_grade_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:gravity="left|bottom"
                    android:text="0.0"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_bookName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:paddingLeft="5dp"
                android:text="OO"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TableRow>

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="분류"
                            android:textSize="14dp"
                            android:textColor="@color/colorMain" />

                        <TextView
                            android:id="@+id/tv_bookType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OOO"
                            android:textSize="14sp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/tv_page"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="쪽수"
                            android:textSize="14dp"
                            android:textColor="@color/colorMain" />

                        <TextView
                            android:id="@+id/tv_bookPage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OO쪽"
                            android:textSize="14sp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/tv_readCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="인증"
                            android:textSize="14dp"
                            android:textColor="@color/colorMain" />

                        <TextView
                            android:id="@+id/tv_bookReadCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OO번"
                            android:textSize="14sp" />
                    </TableRow>

                </TableLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|bottom"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_book_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/ic_flag_isread" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>